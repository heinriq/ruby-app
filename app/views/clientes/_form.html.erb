<%= form_with(model: cliente, local: true) do |form| %>
    <% if cliente.errors.any? %>
      <div id="error_explanation">
        <h2>Cliente n√£o pode ser salvo:</h2>

        <ul>
        <% cliente.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group" style="width: 40%">
      <label for="name">Nome<strong>*</strong>:</label>
      <%= form.text_field :name, :class => 'form-control', :id => 'name', :placeholder => 'Nome' %>
    </div>

    <div class="form-group" style="width: 40%">
      <label for="phone">Telefone<strong>*</strong>:</label>
      <%= form.text_field :phone, :class => 'form-control', :id => 'phone', :placeholder => '(11) 91234-5678' %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>