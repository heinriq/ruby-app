<p id="notice"><%= notice %></p>

<h1>Clientes</h1>
<%= link_to 'Novo Cliente', new_cliente_path, :class => "btn btn-link pull-right"%>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.name %></td>
        <td><%= cliente.phone %></td>
        <td><%= link_to 'Detalhes', cliente, :class => "btn btn-link" %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente), :class => "btn btn-link" %></td>
        <td><%= link_to 'Excluir', cliente, method: :delete , :class => "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
